@model LYSApp.Model.EmailVerificationViewModel

<!-- Email Verification Modal -->
<div class="modal fade text-center" id="modalEmailVerification" role="dialog" aria-labelledby="emailverificationLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            @*<div class="modal-header">
                    <h4 class="modal-title" id="emailverificationLabel">Check your email</h4>
                </div>*@
            <div class="modal-body">
                @*<form role="form" id="form-EmailVerification">*@
                @using (Ajax.BeginForm("ResendAccountActivationMailForNewUser", new { ReturnUrl = ViewBag.ReturnUrl }, new AjaxOptions() { OnBegin = "resendemailverificationBegin", OnSuccess = "resendemailverificationSuccess", OnFailure = "resendemailverificationFailed", HttpMethod = "Post" }, new { role = "form", id = "form-ResendAccountActivationMailForNewUser", autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="errorblock form-group hidden">
                        <div class="alert alert-success modal-alert">
                            <div class="row no-margin">
                                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                                    <i class="fa fa-exclamation-circle"></i>
                                </div>
                                <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                                    <span class="errormessage"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h4>Check your email</h4>
                    <p>
                        Tap the link in the email we sent you.<br />
                        Confirming your email address helps us send you booking information.
                    </p>
                    <div class="circle-outer">
                        <div class="circle-inner">
                            <i class="fa fa-envelope-o"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", maxlength = "50", placeholder = "Email", tabIndex = "1", @readonly = "readonly"})
                    </div>

                    <div class="form-group">
                        <div class="btn-group-justified">
                            <input type="submit" id="btnEmailVerification" class="btn btn-lg btn-green full-width" value="Resend Email" tabindex="2">
                        </div>
                    </div>
                }
                @*</form>*@
            </div>
        </div>
    </div>
</div> <!-- End Email Verification Modal -->
