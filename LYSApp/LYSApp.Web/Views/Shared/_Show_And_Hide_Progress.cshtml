<script type="text/javascript">
//START: Show & Hide process image
var spinnerVisible = false;
function showProgress(isPayment,text) {
    if (!spinnerVisible) {
        var spinner = "";
        if (isPayment) {
            spinner = $("#spinner_modal_transaction");
        }
        else if (isPayment==false && text != "") {
            spinner = $("#spinner_modal_text");
            spinner.find(".content").text(text);
        }
        else {
            spinner = $("#spinner_modal_empty");
        }
        
        $(spinner).modal({
            show: true,
            keyboard: false,
            backdrop: 'static'
        });
        
        spinnerVisible = true;
    }
}
function hideProgress() {
    if (spinnerVisible) {
        $("#spinner_modal_transaction").modal("hide");
        $("#spinner_modal_text").modal("hide");
        $("#spinner_modal_empty").modal("hide");
        spinnerVisible = false;
    }
}
//END: Show & Hide process image
</script>

