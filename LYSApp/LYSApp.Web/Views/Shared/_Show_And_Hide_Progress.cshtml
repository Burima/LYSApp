                <div id='spinner1' class='col-lg-3 col-md-3 col-sm-3 col-xs-12'>
                    <img src="@Url.Content("~/Images/spinner01.gif")" style="width:68%;max-width:100px;"/>
                </div>
                <div  class='col-lg-9 col-md-9 col-sm-9 col-xs-12 text-center' style='padding-top: 20px;'>Your order is being processed. This could take few seconds...</div>
            </div>
