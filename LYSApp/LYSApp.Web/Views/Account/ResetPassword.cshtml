@model LYSApp.Model.AccountViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="container home-container">
    <div class="hidden-lg hidden-md row-spacer"></div>
    <div class="row-spacer-mini hidden-sm hidden-xs"></div>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Reset Password</div>
                <div class="panel-body">
                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ResetPasswordViewModel.Code)
                        @Html.HiddenFor(model => model.ResetPasswordViewModel.UserID)
                        if (TempData["Message"] != null)
                        {
                            <script>
                                window.setTimeout(function () { $(".alert-success").alert('close'); }, 5000);
                            </script>
                            <div class="form-group no-left-margin no-right-margin">
                                <div class="alert alert-success text-red" style="width: 100%;font-size: 1.1em;padding: 2%;background-color: antiquewhite;margin:0px; ">                                    
                                    <i class="fa fa-comments-o"></i><span style="margin:0% 1% 0% 1%;" id="spnMessage" class="text-justify">@TempData["Message"]</span>
                                    <a  class="close  pull-right " data-dismiss="alert"><i class="fa fa-times"></i></a>                                    
                                </div>
                            </div>
                        }
                        <div class="form-group no-left-margin no-right-margin">
                            <label for="exampleInputEmail1">Password</label>
                            @Html.PasswordFor(m => m.ResetPasswordViewModel.Password, new { @class = "form-control", placeholder = "Password" })
                        </div>
                        <div class="form-group no-left-margin no-right-margin">
                            <label for="exampleInputPassword1">Confirm Password</label>
                            @Html.PasswordFor(m => m.ResetPasswordViewModel.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                        </div>
                        <div class="form-group no-left-margin no-right-margin">
                            <input type="submit" class="btn btn-green full-width" value="Reset" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
