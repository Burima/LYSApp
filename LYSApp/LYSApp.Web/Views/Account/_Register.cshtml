@model LYSApp.Model.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}


        <div class="modal fade" id="signup" role="dialog" aria-labelledby="signupLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="signupLabel">Sign Up</h4>
                    </div>
                    <div class="modal-body">
                        <form role="form" action="@Url.Action("Register","Account")" method="post">
                        
                              
                            <div class="form-group">
                                <div class="btn-group-justified">
                                    <a href="explore.html" class="btn btn-lg btn-facebook"><span class="fa fa-facebook pull-left"></span>Sign Up with Facebook</a>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="btn-group-justified">
                                    <a href="explore.html" class="btn btn-lg btn-google"><span class="fa fa-google-plus pull-left"></span>Sign Up with Google</a>
                                </div>
                            </div>
                            <div class="signOr">OR</div>
                            <div class="form-group">
                                <input type="text" placeholder="First Name" class="form-control" name="RegisterViewModel.FirstName" value="@Model.FirstName">
                            </div>
                            <div class="form-group">
                                <input type="text" placeholder="Last Name" class="form-control" name="RegisterViewModel.LastName" value="@Model.LastName">
                            </div>
                            <div class="form-group">
                                <input type="text" placeholder="Email Address" class="form-control" name="RegisterViewModel.Email" value="@Model.Email">
                            </div>
                            <div class="form-group">
                                <input type="password" placeholder="Password" class="form-control" name="RegisterViewModel.Password" value="@Model.Password">
                            </div>
                            <div class="form-group">
                                <input type="password" placeholder="Confirm Password" class="form-control" name="RegisterViewModel.ConfirmPassword" value="@Model.ConfirmPassword">
                            </div>
                            <div class="form-group">
                                <div class="btn-group-justified">
                                    <button type="submit" class="btn btn-lg btn-green">Sign Up</button>
                                </div>
                            </div>
                            <p class="help-block">Already a Reales member? <a href="#" class="modal-si text-green">Sign In</a></p>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>



