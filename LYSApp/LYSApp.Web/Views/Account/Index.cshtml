@section scripts{
    <script>
    var getAreaListURL = '@Url.Action("getArea", "Search")';
    var searchURL = '@Url.Action("getHouses", "Search")';
    </script>
    <script src='@Url.Content("~/Scripts/jquery-ui.min.js")'></script>
    <script>
        $("#txtArea").autocomplete({
            source: function (request, response) {

                $.ajax({
                    url: getAreaListURL,
                    dataType: "json",
                    data: {
                        term: request.term
                    },
                    success: function (res) {
                       res = JSON.parse(res);
                       return response($.map(res, function (data, id) {
                            return {
                                label: data.AreaName + "," + data.CityName,
                                value: data.AreaName + "," + data.CityName,
                                AreaID: data.AreaID,
                                category: data.AreaID
                            };
                        }));

                    },
                    error: function (message) {
                        response([]);
                    }
                });
            },
            minLength: 2,
            select: function (event, ui) {
                $('#txtArea').val(ui.item.value);
                $('#AreaID').val(ui.item.AreaID)
                return false;
            }

        });

